{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "rootDir": "src",
        "target": "es6",    
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        
    },
    "lib": ["es2015"],
    "ts-node": {
        "esm": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }